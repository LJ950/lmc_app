<% provide(:title, 'Meet Sign Up') %><div id="no-scroll">
<div class="sign-up-cal">
	<div class="table-responsive">
    <div class="top-border"></div>
      <div class="row row-top">
        <div class="container">
          <h1>Meet Sign Up</h1>
          <p><%= back_link(members_path(@member)) %></p>
          <span class="cal-key" id="evening" >Evening Meet</span><span class="cal-key" id="day">Day Meet</span><span class="cal-key" id="hut">Hut Meet</span><span class="cal-key" id="camping">Camping Meet</span>
          <table class="table table-condensed" id="calendar">
          <thead>
            <tr>
              <td>Date</td>
              <td>Meet</td>
              <td>Info</td>
            </tr>
          </thead>
          <tbody>
            <% @meets.each do |m| %>
              <% meet_leader = find_meet_leader(m) %>
              <tr id="<%= m.meet_type.downcase %>">
                <td><%= date_display(m.meet_date, m.number_of_nights) %></td>
                <td>
                  <%= m.meet_type %> Meet. <% unless m.places.nil? %><%= m.places %> places.<% end %><br>
                  <%= m.location %><% if m.activity.present? %> (<%= m.activity %>)<% end %><br>
                  Meet Leader: 
                  <% if meet_leader %>
                    <%= meet_leader.full_name %>
                  <% else %>
                    TBC
                  <% end %>
                </td>
                <td>
                  <% if !m.opens_on.nil?%>
                    <% if m.opens_on.future? %>
                      <p>Opens on <%= format_date(m.opens_on) %></p>
                    <% else %>
                      <p>
                        <%= link_with_arrow(new_attendee_member_path(@member, m), "Sign Up") %>
                      </p>
                    <% end %>
                  <% end %>
                  <% if !m.notes.nil? %><p><%= m.notes %></p><% end %>
                  <% if m.bb_url.present? %><p><%= link_with_arrow(m.bb_url, "Bulletin Board Thread") %></p><% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>